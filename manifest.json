{
  "manifest_version": 2,
  "name": "Sleeping Policeman",
  "version": "1.0.1",
  "description": "Slow down!",
  "permissions": [
    "https://*.reddit.com/*",
    "*://*.x.com/*",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/policeman-small.png"
  }
}
