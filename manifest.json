{
  "manifest_version": 2,
  "name": "Sleeping Policeman",
  "version": "1.0",
  "description": "Slow down!",
  "permissions": [
    "https://*.reddit.com/*",
    "*://*.x.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["slowdown.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "policeman-small.png"
  }
}
